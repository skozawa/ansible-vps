---
# geerlingguy.mysql
mysql_databases:
  - name: comainu
    collation: utf8_general_ci
    encoding: utf8

# darthwade.wordpress
wp_version: 4.8
wp_install_dir: /var/www/comainu
wp_db_name: wp_comainu
wp_db_user: root
wp_db_password: root

# nbz4live.php-fpm
php_fpm_version: 5.6
php_fpm_pools:
  - name: comainu
    user: www-data
    group: www-data
    listen: 127.0.0.1:9000
    chdir: /var/www/comainu

# geerlingguy.php-mysql
php_mysql_package: php{{ php_fpm_version|int }}-mysql

# jdauphant.nginx
nginx_sites:
  wordpress:
    - listen 80
    - server_name localhost
    - root /var/www/comainu
    - index index.php
    - location ~* /wp-config.php { deny all; }
    - location ~ \.php$ {
        fastcgi_pass 127.0.0.1:9000;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
      }
